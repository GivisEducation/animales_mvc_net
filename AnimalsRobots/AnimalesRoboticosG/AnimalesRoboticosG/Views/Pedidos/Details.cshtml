@model Conexiones.Animales.Models.Pedidos

@{
    ViewBag.Title = "Detalles";
}

    <div class="cotainer">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header text-black-50 bg-light">Detalle del Pedido</div>
                    <div class="form-group row">
                        <div class="col-md-6">
                            <strong>Fecha:</strong>
                            @Html.DisplayFor(model => model.fecha)
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-6">
                            <strong>Fecha envio:</strong>
                            @Html.DisplayFor(model => model.fechaEnvio)
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-6">
                            <strong>Destinatario:</strong>
                            @Html.DisplayFor(model => model.nombreDestinatario)
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-6">
                            <strong>Dirección:</strong>
                            @Html.DisplayFor(model => model.Direcciones.nombre)
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-6">
                            <strong>Descripción:</strong>
                            @Html.DisplayFor(model => model.Ventas.descripcion)
                        </div>
                    </div>
                    <div class="col-md-6 offset-md-4">
                        <button type="button" class="btn btn-warning btn-sm">
                            <i class="fa fa-edit"></i>
                            @Html.ActionLink("Editar", "Edit", new { id = Model.id })
                        </button>
                    </div>

                    @Html.ActionLink("Volver", "Index")
                </div>
            </div>
        </div>
    </div>


           

           
