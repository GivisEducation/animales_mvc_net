@model Conexiones.Animales.Models.Direcciones

@{
    ViewBag.Title = "Detalles";
}


<div class="cotainer">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header text-black-50 bg-light">Detalle de Dirección</div>
                <div class="form-group row">
                    <div class="col-md-6">
                        <strong>Dirección:</strong>
                        @Html.DisplayFor(model => model.nombre)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-6">
                        <strong>Código Postal:</strong>
                        @Html.DisplayFor(model => model.codigoPostal)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-6">
                        <strong>Referencias:</strong>
                        @Html.DisplayFor(model => model.referencias)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-6">
                        <strong>Recibidor:</strong>
                        @Html.DisplayFor(model => model.recibidor)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-6">
                        <strong>Número:</strong>
                        @Html.DisplayFor(model => model.numero)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-6">
                        <strong>Departamento:</strong>
                        @Html.DisplayFor(model => model.departamento)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-6">
                        <strong>Principal:</strong>
                        @Html.DisplayFor(model => model.principal)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-6">
                        <strong>Comuna:</strong>
                        @Html.DisplayFor(model => model.Comunas.nombre)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-6">
                        <strong>Usuario:</strong>
                        @Html.DisplayFor(model => model.Usuarios.nombre)
                    </div>
                </div>
                <div class="col-md-6 offset-md-4">
                    <button type="button" class="btn btn-warning btn-sm">
                        <i class="fa fa-edit"></i>
                        @Html.ActionLink("Editar", "Edit", new { id = Model.id })
                    </button>
                </div>

                @Html.ActionLink("Volver", "Index")
            </div>
        </div>
    </div>
    </div>