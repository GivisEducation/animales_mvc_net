@model Conexiones.Animales.Models.Direcciones

@{
    ViewBag.Title = "Ingresar nueva dirección";
}

<div class="cotainer">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <i class="fa fa-plus-circle"></i><div class="card-header text-white bg-dark mb-3">Agregar Dirección</div>
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group row">
                            <label class="col-md-4 col-form-label text-md-right">Dirección</label>
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                            </div>

                            <label class="col-md-4 col-form-label text-md-right">Comunas</label>
                            <div class="col-md-6">
                                @Html.DropDownList("idComuna", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.idComuna, "", new { @class = "text-danger" })
                            </div>

                            <label class="col-md-4 col-form-label text-md-right">Usuario</label>
                            <div class="col-md-6">
                                @Html.DropDownList("idUsuario", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.idUsuario, "", new { @class = "text-danger" })
                            </div>

                            <label class="col-md-4 col-form-label text-md-right">Código Postal</label>
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.codigoPostal, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.codigoPostal, "", new { @class = "text-danger" })
                            </div>

                            <label class="col-md-4 col-form-label text-md-right">Referencias</label>
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.referencias, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.referencias, "", new { @class = "text-danger" })
                            </div>

                            <label class="col-md-4 col-form-label text-md-right">Recibidor</label>
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.recibidor, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.recibidor, "", new { @class = "text-danger" })
                            </div>

                            <label class="col-md-4 col-form-label text-md-right">Número</label>
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.numero, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.numero, "", new { @class = "text-danger" })
                            </div>

                            <label class="col-md-4 col-form-label text-md-right">Departamento</label>
                            <div class="col-md-6">
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.departamento)
                                    @Html.ValidationMessageFor(model => model.departamento, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <label class="col-md-4 col-form-label text-md-right">Dirección Principal</label>
                            <div class="col-md-6">
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.principal)
                                    @Html.ValidationMessageFor(model => model.principal, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-md-6 offset-md-4">
                                <input type="submit" value="Guardar" class="btn btn-success" />
                            </div>
                        </div>
                    }
                </div>
                <div>
                    @Html.ActionLink("Volver", "Index")
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
