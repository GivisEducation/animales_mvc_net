@model Conexiones.Animales.Models.Perfiles

@{
    ViewBag.Title = "Elminar perfil";
}

<div class="cotainer">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <i class="fa fa-remove"></i><div class="card-header text-white bg-dark mb-3">Eliminar perfil</div>
                <div class="form-group row">
                    <div class="col-md-6">
                        <label class="col-md-4 col-form-label text-md-right">Tipo de Usuario:</label>
                        @Html.DisplayFor(model => model.nombre)
                    </div>
                
                </div>
                <div class="col-md-6 offset-md-4">
                    <label class="justify-content-center">¿Está seguro que desea eliminar el perfil?</label>
                </div>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="col-md-6 offset-md-4">
                        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
                        @Html.ActionLink("Volver", "Index")
                    </div>
                }

            </div>
        </div>
    </div>
</div>
