@model Conexiones.Animales.Models.DetallePedidos

@{
    ViewBag.Title = "Eliminar Detalle de Pedido";
}

<div class="cotainer">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <i class="fa fa-remove"></i><div class="card-header text-white bg-dark mb-3">Eliminar Detalle de pedido</div>
                <div class="form-group row">
                    <div class="col-md-6">
                        <label class="col-md-4 col-form-label text-md-right">Precio:</label>
                        @Html.DisplayFor(model => model.precio)
                    </div>
                    <div class="col-md-6">
                        <label class="col-md-4 col-form-label text-md-right">Promoción:</label>
                        @Html.DisplayFor(model => model.promocion)
                    </div>
                    <div class="col-md-6">
                        <label class="col-md-4 col-form-label text-md-right">Destinatario:</label>
                        @Html.DisplayFor(model => model.Pedidos.nombreDestinatario)
                    </div>
                    <div class="col-md-6">
                        <label class="col-md-4 col-form-label text-md-right">Productos:</label>
                        @Html.DisplayFor(model => model.Productos.nombre)
                    </div>

                </div>
                <div class="col-md-6 offset-md-4">
                    <label class="justify-content-center">¿Está seguro que desea eliminar detalle de pedido?</label>
                </div>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="col-md-6 offset-md-4">
                        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
                        @Html.ActionLink("Volver", "Index")
                    </div>
                }

            </div>
        </div>
    </div>
</div>