@model Conexiones.Animales.Models.Ventas

@{
    ViewBag.Title = "Detalle de Venta";
}

<div class="cotainer">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header text-black-50 bg-light">Detalle de Venta</div>
                <div class="form-group row">
                    <div class="col-md-6">
                        <strong>Fecha:</strong>
                        @Html.DisplayFor(model => model.fecha)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-6">
                        <strong>Total:</strong>
                        @Html.DisplayFor(model => model.total)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-6">
                        <strong>Descripción:</strong>
                        @Html.DisplayFor(model => model.descripcion)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-6">
                        <strong>Metodo de Pago:</strong>
                        @Html.DisplayFor(model => model.MetodoPagos.formaPago)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-6">
                        <strong>Usuario:</strong>
                        @Html.DisplayFor(model => model.Usuarios.nombre)
                    </div>
                </div>
                <div class="col-md-6 offset-md-4">
                    <button type="button" class="btn btn-warning btn-sm">
                        <i class="fa fa-edit"></i>
                        @Html.ActionLink("Editar", "Edit", new { id = Model.id })
                    </button>
                </div>

                @Html.ActionLink("Volver", "Index")
            </div>
        </div>
    </div>
</div>

