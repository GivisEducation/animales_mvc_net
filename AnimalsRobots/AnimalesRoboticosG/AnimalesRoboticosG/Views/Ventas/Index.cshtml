@model IEnumerable<Conexiones.Animales.Models.Ventas>

@{
    ViewBag.Title = "Finanzas";
}
<div class="d-flex ml-5 mr-5">
    <table class="table">
        <thead class="thead-dark table-bordered">
            <tr>
                <th>
                    <label>Fecha</label>
                </th>
                <th>
                    <label>Total</label>
                </th>
                <th>
                    <label>Descripción</label>
                </th>
                <th>
                    <label>Metodo de Pago</label>
                </th>
                <th>
                    <label>Usuario</label>
                </th>
                <th>
                    <label>Opciones</label>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.fecha)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.total)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MetodoPagos.formaPago)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Usuarios.nombre)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                        @Html.ActionLink("Ver", "Details", new { id = item.id }) |
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.id })
                    </td>
                </tr>
            }
        </tbody>
        <tfoot class="thead-dark">
            <tr>
                <th>
                    <label>Fecha</label>
                </th>
                <th>
                    <label>Total</label>
                </th>
                <th>
                    <label>Descripción</label>
                </th>
                <th>
                    <label>Metodo de Pago</label>
                </th>
                <th>
                    <label>Usuario</label>
                </th>
                <th>Opciones</th>
            </tr>
        </tfoot>
    </table>
</div>
<div class="d-flex justify-content-end mr-5"><a href="@Url.Action("Create")" class="btn btn-success"><i class="fa fa-plus-circle"></i> Agregar</a></div>