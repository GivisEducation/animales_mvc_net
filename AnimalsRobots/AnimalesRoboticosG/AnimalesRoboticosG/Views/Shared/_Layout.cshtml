<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Animales Roboticos</title>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a href="@Url.Action("Index", "Home")"><img width="90" height="90" src="~/Content/imagenGeneral/LogoPet.png"></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <div class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Mercancia
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="@Url.Action("Index", "Productos")">Productos</a>
                            <a class="dropdown-item" href="@Url.Action("Index", "ImagenesProductos")">Imagenes de los Productos</a>
                            <a class="dropdown-item" href="@Url.Action("Index", "Categorias")">Categorías</a>
                        </div>

                    </div>
                    <div class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Finanzas
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="@Url.Action("Index", "Ventas")">Ventas</a>
                            <a class="dropdown-item" href="@Url.Action("Index", "DetalleVentas")">Detalle de Ventas</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="@Url.Action("Index", "MetodoPagos")">Metodos de pago</a>
                        </div>
                    </div>
                    <div class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Ubicación
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="@Url.Action("Index", "Comunas")">Comunas</a>
                            <a class="dropdown-item" href="@Url.Action("Index", "Regiones")">Regiones</a>
                            <a class="dropdown-item" href="@Url.Action("Index", "Paises")">Paises</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="@Url.Action("Index", "Direcciones")">Direcciones</a>
                        </div>
                    </div>
                    <div class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Solicitudes de Compra
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="@Url.Action("Index", "Pedidos")">Pedidos</a>
                            <a class="dropdown-item" href="@Url.Action("Index", "DetallePedidos")">Detalle de pedidos</a>
                        </div>
                    </div>
                    <div class="nav-item dropdown">

                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fa fa-user"></i> Cuentas de usuarios
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="@Url.Action("Index", "Usuarios")">Usuarios</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="@Url.Action("Index", "Perfiles")">Perfiles</a>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <br />
    <br />


    <section>
        @RenderBody()
    </section>
    <br />
    <br />

    <!-- Footer -->
    <footer class="page-footer font-small cyan darken-3">

        <!-- Footer Elements -->
        <div class="container">

            <!-- Redes Sociales -->
            <ul class="list-unstyled list-inline text-center">
                <li class="list-inline-item">
                    <i class="fa fa-linux" style="font-size: 32px;display:block;height:30px;color:purple"></i>
                </li>
                <li class="list-inline-item">
                    <i class="fa fa-github" style="font-size: 32px;display:block;height:30px;color:black"></i>
                </li>
                <li class="list-inline-item">
                    <i class="fa fa-phone" style="font-size: 32px;display:block;height:30px"></i>
                </li>
                <li class="list-inline-item">
                    <i class="fa fa-cloud" style="font-size: 32px;display:block;height:30px;color:lightskyblue"></i>
                </li>
            </ul>

        </div>
        <!-- Footer Elements -->
        <!-- Copyright -->
        <div class="footer-copyright text-center py-3">
            © 2020 Copyright:
            AnimalesRoboticos.com
        </div>
        <!-- Copyright -->

    </footer>
    <!-- Footer -->

    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

</body>
</html>