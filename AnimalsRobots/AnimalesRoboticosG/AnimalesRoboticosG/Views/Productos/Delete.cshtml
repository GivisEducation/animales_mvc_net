@model Conexiones.Animales.Models.Productos

@{
    ViewBag.Title = "Eliminar Producto";
}

<div class="cotainer">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <i class="fa fa-remove"></i><div class="card-header text-white bg-dark mb-3">Eliminar Producto</div>
                <div class="form-group row">
                    <div class="col-md-6">
                        <label class="col-md-4 col-form-label text-md-right">Producto:</label>
                        @Html.DisplayFor(model => model.nombre)
                    </div>
                    <div class="col-md-6">
                        <label class="col-md-4 col-form-label text-md-right">Descripción:</label>
                        @Html.DisplayFor(model => model.descripcion)
                    </div>
                    <div class="col-md-6">
                        <label class="col-md-4 col-form-label text-md-right">Stock:</label>
                        @Html.DisplayFor(model => model.stock)
                    </div>
                    <div class="col-md-6">
                        <label class="col-md-4 col-form-label text-md-right">Precio:</label>
                        @Html.DisplayFor(model => model.precio)
                    </div>
                    <div class="col-md-6">
                        <label class="col-md-4 col-form-label text-md-right">Color:</label>
                        @Html.DisplayFor(model => model.color)
                    </div>
                    <div class="col-md-6">
                        <label class="col-md-4 col-form-label text-md-right">Tamaño:</label>
                        @Html.DisplayFor(model => model.tamaño)
                    </div>

                    <div class="col-md-6">
                        <label class="col-md-4 col-form-label text-md-right">Promoción:</label>
                        @Html.DisplayFor(model => model.promocion)
                    </div>
                    <div class="col-md-6">
                        <label class="col-md-4 col-form-label text-md-right">Categoría:</label>
                        @Html.DisplayFor(model => model.Categorias.nombre)
                    </div>
                    <div class="col-md-6">
                        <label class="col-md-4 col-form-label text-md-right">Eliminado:</label>
                        @Html.DisplayFor(model => model.eliminado)
                    </div>
                    <div class="col-md-6">
                        <label class="col-md-4 col-form-label text-md-right">Fecha de Eliminación:</label>
                        @Html.DisplayFor(model => model.fechaEliminacion)
                    </div>
                </div>
                <div class="col-md-6 offset-md-4">
                    <label class="justify-content-center">¿Está seguro que desea eliminar producto?</label>
                </div>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

            <div class="col-md-6 offset-md-4">
                @Html.ActionLink("Volver", "Index")
                <input type="submit" value="Eliminar" class="btn btn-danger" />

            </div>
                }

            </div>
        </div>
    </div>
</div>
