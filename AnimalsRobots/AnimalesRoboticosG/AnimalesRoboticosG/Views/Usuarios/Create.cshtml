@model Conexiones.Animales.Models.Usuarios

@{
    ViewBag.Title = "Ingresar usuario";
}
<div class="cotainer">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <i class="fa fa-plus-circle"></i><div class="card-header text-white bg-dark mb-3">Agregar Usuario</div>
                <div class="card-body">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group row">
                        <label class="col-md-4 col-form-label text-md-right">Usuario</label>
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                        </div>
                            <label class="col-md-4 col-form-label text-md-right">Email</label>
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                            </div>
                            <label class="col-md-4 col-form-label text-md-right">Activo</label>
                            <div class="col-md-6">
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.activo)
                                    @Html.ValidationMessageFor(model => model.activo, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <label class="col-md-4 col-form-label text-md-right">Clave</label>
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.clave, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.clave, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    <div class="col-md-6 offset-md-4">
                        <input type="submit" value="Guardar" class="btn btn-success" />
                    </div>
                }

                </div>
                <div>
                    @Html.ActionLink("Volver", "Index")
                </div>
            </div>
        </div>
    </div>
    </div>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
